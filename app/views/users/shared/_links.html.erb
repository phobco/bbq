<div class="row d-grid gap-2 d-md-flex justify-content-md-center mb-2 mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('buttons.sign_in'), new_session_path(resource_name), class: 'link-secondary text-center' %>
  <% end %>

  <div class="col-md-12 text-center">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to image_tag(oauth_logo(provider), class: 'oauth-logo'), omniauth_authorize_path(resource_name, provider), method: :post %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-12 text-center">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('buttons.forgot_password'), new_password_path(resource_name) %>
    <% end %>
  </div>
</div>
