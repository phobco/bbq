<h2 class="text-center fw-light"><%= t('titles.password_edit')%></h2>

<div class="row d-flex justify-content-center mt-4">
  <div class="col-md-6 border rounded shadow">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="my-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control shadow-sm' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('text.waiting_confirmation', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %> <i><%= t('text.leave_empty') %></i>
        <%= f.password_field :password, class: 'form-control shadow-sm' %>
        <% if @minimum_password_length %>
          <em><%= t('text.password_length', length: @minimum_password_length) %></em>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control shadow-sm' %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: 'form-label' %>
        <%= f.password_field :current_password, class: 'form-control shadow-sm' %>
      </div>

      <div class="mb-3 float-end">
        <%= link_to t('buttons.back'), user_path(current_user), class: 'link-secondary' %>
        <%= t('text.or')%>
        <%= f.submit t('buttons.update'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= button_to t('buttons.account_delete'), registration_path(resource_name),
      data: { confirm: t('account.destroy_confirm') }, method: :delete, class: 'btn btn-danger btn-sm mb-3' %>

  </div>
</div>
