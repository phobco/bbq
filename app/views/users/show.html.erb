<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: 'avatar' %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to t('titles.account_edit'),
      edit_user_path(@user), class: 'btn btn-light border rounded-pill' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3 class="fw-light"><%= t('titles.organized')%>:</h3>
        <div class="row mt-3">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('text.no_events') %></p>
      <% end %>
    </div>
  </div>
</div>
