<span class="user">
  <span class="user-avatar">
    <%= image_tag(user_avatar(user), class: 'img-icon', style: 'height: 28px;') %>
  </span>
  <span class="user-name fs-5">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to "@#{user.name}", user_path(user), class: 'link-dark'%>
    <% end %>
  </span>
</span>
