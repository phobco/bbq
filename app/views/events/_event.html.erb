<div class="col-sm-6 col-md-4">
  <div class="thumbnail mb-4 shadow">

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{event_photo(event)})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption m-2">
        <div class="event-description">
          <h3 class="fw-light"><%= link_to event.title, event_path(event) %></h3>
          <h5 class="fw-lighter"><%= l(event.datetime, format: :short) %></h5>
          <%= content_tag(:div, event.address, class: 'buffer-both text-break') %>
          <div>
            <% event.visitors.sample(5).each do |user| %>
              <%= link_to(image_tag(user_avatar_thumb(user), class: 'img-icon', title: user.name), user_path(user)) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
